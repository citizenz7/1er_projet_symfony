{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

<div class="container pt-5">
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" role="button" href="{{ path('post_index') }}">back to list</a>

    <a class="btn btn-primary" role="button" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}

  </div>
{% endblock %}
